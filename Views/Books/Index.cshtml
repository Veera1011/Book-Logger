@model IEnumerable<BookLogger.Models.Book>

<h2>My Book List</h2>

<a asp-action="Create" class="btn btn-primary">Add New Book</a>

<table class="table">
    <thead>
        <tr>
            <th>Title</th><th>Author</th><th>Status</th><th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@book.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@book.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@book.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
