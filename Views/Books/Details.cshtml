@model BookLogger.Models.Book

<h2>Book Details</h2>
<table class="table">
    <tr><th>Title</th><td>@Model.Title</td></tr>
    <tr><th>Author</th><td>@Model.Author</td></tr>
    <tr><th>Genre</th><td>@Model.Genre</td></tr>
    <tr><th>Start Date</th><td>@Model.StartDate?.ToString("yyyy-MM-dd")</td></tr>
    <tr><th>End Date</th><td>@Model.EndDate?.ToString("yyyy-MM-dd")</td></tr>
    <tr><th>Status</th><td>@Model.Status</td></tr>
    <tr><th>Rating</th><td>@Model.Rating</td></tr>
    <tr><th>Notes</th><td>@Model.Notes</td></tr>
</table>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
